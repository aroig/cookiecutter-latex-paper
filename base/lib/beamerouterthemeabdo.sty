
\mode<presentation>

\setbeamercolor*{title}{parent=structure}
\setbeamercolor*{author}{parent=normal text}
\setbeamercolor*{institute}{parent=normal text}
\setbeamercolor*{date}{parent=normal text}

\defbeamertemplate*{frametitle}{abdoclean theme}[1][left]
{%
  \vspace{0.40em}%
  \noindent%
  \tikz[overlay,baseline=0.3em]{\fill (-0.15,0.05) rectangle (0.05,0.9);}%
  ~~\insertframetitle%
}

\defbeamertemplate*{title page}{abdoclean theme}[1][]
{
  \begin{center}\begin{minipage}{0.9\textwidth}
    \usebeamercolor[fg]{title}\usebeamerfont{title}{\huge \inserttitle}\par
    \bigskip
    \usebeamercolor[fg]{author}\usebeamerfont{author}{\large \insertauthor}\par\vspace{0.1cm}
    \usebeamercolor[fg]{institute}\usebeamerfont{institute}{\small \insertinstitute}\par
    \bigskip
    \usebeamercolor[fg]{date}\usebeamerfont{date}{\small \insertdate}\par
  \end{minipage}\end{center}
}

% page numbers
\newcounter{totalfr}
\setbeamertemplate{footline}{
  \setcounter{totalfr}{\inserttotalframenumber}
  \hfill{
    \tikz{
      \filldraw[fill=structure!30!white, draw=structure!30!white]  (0,0) -- (0.2,0) arc (0:{\value{framenumber}*(360/(\value{totalfr}-1))}:0.2) -- (0,0);
      \draw[very thin,draw=black!50!white] (0,0) circle (0.2);
      \node at (0,0) {\normalsize \color{fg}\tiny{\insertframenumber}};
    }
  }
  \hspace{2em}
  \vspace*{1em}
}

% less margin on the sides
\setbeamersize{text margin left=1.5em,text margin right=1.5em}

\mode
<all>
